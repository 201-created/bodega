<article class="show-item {{if isFocused 'is-focused'}}"
  data-test-item={{item.id}}
  data-item-id={{item.id}}>
  <div class="show-item__image">
    <img src={{item.url}}>
  </div>

  {{#if isFocused}}
    <div class="show-item__sms">
      <a href={{smsHref}}>Share by SMS</a>
    </div>
  {{/if}}
</article>
