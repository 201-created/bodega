<div class='viewport d-flex flex-column'>
  <header class='app-header navbar navbar-inverted flex-row justify-content-between'>
    <div class='app-header__action'>
      {{#from-elsewhere name="header" as |header|}}
        {{#liquid-bind header rules=animationRules as |opts|}}
          {{#if opts.component}}
            {{component opts.component}}
          {{/if}}
        {{/liquid-bind}}
      {{/from-elsewhere}}
    </div>

    <h1 class='navbar-brand mx-1'>Shop <span class='sr-only'>201</span> {{svg-logo logoStyle='badge' class='d-inline-block align-middle'}}</h1>

    <a class='app-header__colophon navbar-text' href="https://www.201-created.com/">{{svg-logo}}<span class='font-size-xs'>experiment</span></a>
  </header>

  <div class='d-flex flex-column flex-md-row col no-gutters p-0'>
    <main class='d-flex flex-column col'>
      {{outlet}}
    </main>

    <footer class='app-footer d-flex flex-column col-md-4 col-lg-3'>
      {{bodega-cart order=cart.order
                    increment=(action 'increment')
                    decrement=(action 'decrement')
                    class='container py-2'}}
    </footer>
  </div>
</div>